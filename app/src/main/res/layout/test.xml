<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- General Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Account Information -->
    <LinearLayout
        android:id="@+id/accountInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/settings_item_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Account" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account information"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/accountInfoArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Expand" />
    </LinearLayout>

    <!-- Hidden Account Info Expansion -->
    <LinearLayout
        android:id="@+id/accountInfoExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/settings_expansion_background"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username: user123"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription: Premium"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Language -->
    <LinearLayout
        android:id="@+id/languageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/settings_item_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_language"
            android:contentDescription="Language" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Language"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/languageArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Expand" />
    </LinearLayout>

    <!-- Hidden Language Expansion -->
    <LinearLayout
        android:id="@+id/languageExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/settings_expansion_background"
        android:visibility="gone">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/englishOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:checked="true" />

            <RadioButton
                android:id="@+id/vietnameseOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vietnamese" />

            <RadioButton
                android:id="@+id/spanishOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spanish" />
        </RadioGroup>
    </LinearLayout>

    <!-- Theme -->
    <LinearLayout
        android:id="@+id/themeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/settings_item_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Theme" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appearance"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/themeArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wiki"
            android:contentDescription="Expand" />
    </LinearLayout>

    <!-- Hidden Theme Expansion (Using your provided code) -->
    <LinearLayout
        android:id="@+id/themeExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/settings_expansion_background"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_light_mode_24"
                android:contentDescription="@string/light_mode"
                app:tint="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Switch
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:thumbTint="@color/black"
                    android:trackTint="@color/gray"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/dark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_dark_mode_24"
                android:contentDescription="@string/dark_mode"
                app:tint="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Notifications -->
    <LinearLayout
        android:id="@+id/notificationsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/settings_item_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Notifications" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/notificationsArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Expand" />
    </LinearLayout>

    <!-- Hidden Notifications Expansion -->
    <LinearLayout
        android:id="@+id/notificationsExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/settings_expansion_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Push notifications"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/pushNotificationsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New releases"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/newReleasesSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Artist updates"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/artistUpdatesSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:padding="12dp"
        android:textColor="@color/black"
        android:background="@drawable/logout_button_background"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>