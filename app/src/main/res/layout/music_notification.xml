<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Background Image (song cover art) -->
    <ImageView
        android:id="@+id/notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.9" />

    <!-- Spotify logo -->
    <TextView
        android:id="@+id/notification_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:alpha="0.8" />

    <!-- Song title -->
    <TextView
        android:id="@+id/notification_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_app_name"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- Artist name -->
    <TextView
        android:id="@+id/notification_song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_song_title"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp" />

    <!-- Media Controls -->
    <LinearLayout
        android:id="@+id/media_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_song_artist"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/notification_prev"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_prev"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notification_play_pause"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_play_circle"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notification_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notification_shuffle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_shuffle"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notification_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_add_circle"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notification_repeat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_repeat_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Progress bar -->
    <SeekBar
        android:id="@+id/notification_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/media_controls"
        android:layout_marginTop="8dp"
        android:progressTint="#FFFFFF"
        android:thumbTint="#FFFFFF"
        android:progress="40"/>

    <!-- Time indicators -->
    <TextView
        android:id="@+id/notification_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_seekbar"
        android:layout_alignParentStart="true"
        android:text="01:12"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/notification_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_seekbar"
        android:layout_alignParentEnd="true"
        android:text="02:46"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>
</RelativeLayout>